{
  "name": "debugsharp",
  "displayName": "DebugSharp",
  "description": "Enhanced C# debugging experience with inline evaluation, JSON object viewing, and advanced debug hints",
  "version": "1.0.0",
  "publisher": "Ethaewyn",
  "icon": "icon.png",
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "csharp",
    "c#",
    "debug",
    "debugger",
    "evaluation",
    "json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ethaewyn/debugsharp"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "activationEvents": [
    "onDebug",
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csharpDebugHints.evaluateExpression",
        "title": "Evaluate Expression",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.evaluateInEditor",
        "title": "Evaluate Expression from Editor",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.showObjectJson",
        "title": "Show Object as JSON",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.viewObjectJson",
        "title": "View Object as JSON",
        "category": "C# Debug Hints"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "csharpDebugHints.evaluateExpression",
          "when": "debugState == 'stopped'",
          "group": "debug@1"
        },
        {
          "command": "csharpDebugHints.viewObjectJson",
          "when": "debugState == 'stopped'",
          "group": "debug@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "csharpDebugHints.evaluateInEditor",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == csharp && debugState == 'stopped'"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p . && node -e \"require('fs').cpSync('src/ui/panels/templates', 'out/ui/panels/templates', {recursive: true})\""
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.108.1",
    "@vscode/vsce": "^3.7.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
