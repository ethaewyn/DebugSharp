{
  "name": "debugsharp",
  "displayName": "DebugSharp",
  "description": "Enhanced C# debugging experience with inline evaluation, JSON object viewing, and advanced debug hints",
  "version": "1.2.2",
  "publisher": "Ethaewyn",
  "icon": "icon.png",
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "csharp",
    "c#",
    "debug",
    "debugger",
    "evaluation",
    "json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ethaewyn/debugsharp"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "activationEvents": [
    "onDebug",
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csharpDebugHints.evaluateExpression",
        "title": "Evaluate Expression",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.evaluateInEditor",
        "title": "Evaluate Expression from Editor",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.showObjectJson",
        "title": "Show Object as JSON",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.viewObjectJson",
        "title": "View Object as JSON",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.quickLaunch",
        "title": "Quick Launch Project",
        "category": "C# Debug Hints",
        "icon": "$(debug-start)"
      },
      {
        "command": "csharpDebugHints.quickBuild",
        "title": "Quick Build Project",
        "category": "C# Debug Hints",
        "icon": "$(tools)"
      },
      {
        "command": "csharpDebugHints.quickClean",
        "title": "Quick Clean Project",
        "category": "C# Debug Hints",
        "icon": "$(trash)"
      },
      {
        "command": "csharpDebugHints.quickRebuild",
        "title": "Quick Rebuild Project",
        "category": "C# Debug Hints",
        "icon": "$(sync)"
      },
      {
        "command": "csharpDebugHints.quickTest",
        "title": "Quick Test Project",
        "category": "C# Debug Hints",
        "icon": "$(beaker)"
      },
      {
        "command": "csharpDebugHints.generateLaunchConfig",
        "title": "Generate Debug Configurations",
        "category": "C# Debug Hints"
      },
      {
        "command": "csharpDebugHints.manageNugetPackages",
        "title": "Manage NuGet Packages",
        "category": "C# Debug Hints"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "csharpDebugHints.manageNugetPackages",
          "when": "resourceExtname == .csproj",
          "group": "nuget@1"
        }
      ],
      "editor/context": [
        {
          "command": "csharpDebugHints.evaluateExpression",
          "when": "debugState == 'stopped'",
          "group": "debug@1"
        },
        {
          "command": "csharpDebugHints.viewObjectJson",
          "when": "debugState == 'stopped'",
          "group": "debug@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "csharpDebugHints.evaluateExpression",
        "key": "ctrl+e",
        "mac": "cmd+e",
        "when": "editorTextFocus && editorLangId == csharp && debugState == 'stopped'"
      },
      {
        "command": "csharpDebugHints.evaluateInEditor",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "resourceFilename == .vscode-debug-eval.cs"
      },
      {
        "command": "csharpDebugHints.quickLaunch",
        "key": "ctrl+shift+f5",
        "mac": "cmd+shift+f5"
      },
      {
        "command": "csharpDebugHints.quickBuild",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "csharpDebugHints.quickClean",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k"
      },
      {
        "command": "csharpDebugHints.quickRebuild",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "csharpDebugHints.quickTest",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p . && node -e \"require('fs').cpSync('src/ui/panels/templates', 'out/ui/panels/templates', {recursive: true})\""
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.108.1",
    "@types/xml2js": "^0.4.14",
    "@vscode/vsce": "^3.7.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "xml2js": "^0.6.2"
  }
}
